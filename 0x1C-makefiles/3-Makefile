# 3-Makefile

# variables:
SRC =  main.c holberton.c 
CC = gcc
OBJ = $(SRC:%.c=%.o) 
NAME = holberton
RM = rm -rf

#Rules:

%.o: %c m.h
	$(CC) -c -o $@ $<


all: $(OBJ)
	$(CC) $(OBJ) -o $(NAME)


clean:
	$(RM) *~ $(NAME)

oclean:
	$(RM) $(OBJ)

fclean:
	$(RM) $(NAME)
	$(RM) $(OBJ)

re: oclean all



